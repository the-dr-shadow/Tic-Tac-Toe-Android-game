<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="interns.tictactoe.twoplayer"
    android:background="@drawable/main11">


    <Button
        android:id="@+id/button"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:background="@drawable/buttonbackgrndcustom"
        android:layout_alignParentLeft="true"
         />

    <Button
       android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonbackgrndcustom"
        android:layout_toRightOf="@+id/button"
        android:layout_centerHorizontal="true"
/>

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/buttonbackgrndcustom"
        android:layout_toRightOf="@+id/button2"
      />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button4"
        android:background="@drawable/buttonbackgrndcustom"
        android:paddingTop="30dp"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button5"
        android:background="@drawable/buttonbackgrndcustom"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/button"
        android:layout_below="@+id/button2"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button6"
        android:background="@drawable/buttonbackgrndcustom"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/button2"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button7"
        android:background="@drawable/buttonbackgrndcustom"
        android:layout_below="@+id/button4"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button8"
        android:background="@drawable/buttonbackgrndcustom"
        android:layout_below="@+id/button5"
        android:layout_toRightOf="@+id/button"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button9"
        android:layout_toRightOf="@+id/button2"
        android:background="@drawable/buttonbackgrndcustom"
        android:layout_below="@+id/button6"/>

    <Button
        android:id="@+id/newgame"
        android:layout_width="30dp"
        android:layout_height="300dp"
        android:layout_below="@id/title"
        android:layout_toRightOf="@id/button3"
        android:text="New Game"
        android:textSize="30dp"
        android:paddingTop="10dp"
        android:background="@drawable/buttonbackgrndcustom"></Button>

    <ImageButton
        android:id="@+id/player1pics"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button7"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:text="VS"
        android:textSize="30dp"
        android:paddingTop="25dp"/>

    <ImageButton
        android:id="@+id/player2pics"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/button9"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_launcher"
        android:background="@android:color/transparent" />


    <TextView
        android:id="@+id/tvplayerturn"
        android:layout_width="match_parent"
        android:layout_height="50pt"
        android:layout_alignParentBottom="true"
        android:background="#c13332"
        android:textColor="@android:color/white"></TextView>

 
</RelativeLayout>
